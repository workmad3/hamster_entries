<div class="span6 offset3 well">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post, class: "form-horizontal"}) do |f| %>
    <fieldset>
      <legend>Forgotten your password?</legend>
      <div class="control-group">
        <%= f.label :email, class: "control-label" %>
        <div class="controls">
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>

      <div class="form-actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-info" %>
      </div>
    </fieldset>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
